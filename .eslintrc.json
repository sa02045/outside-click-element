{
  "root": true,
  "extends": ["plugin:custom-elements/recommended"],
  "rules": {
    "custom-elements/tag-name-matches-class": [
      "error",
      {
        "suffix": "Element"
      }
    ]
  },
  "overrides": [
    {
      "files": "src/*-define.ts",
      "rules": {
        "@typescript-eslint/no-namespace": "off"
      }
    },
    {
      "files": "test/**/*.js",
      "rules": {
        "github/unescaped-html-literal": "off",
        "github/no-inner-html": "off",
        "i18n-text/no-en": "off"
      },
      "env": {
        "mocha": true
      }
    }
  ]
}
